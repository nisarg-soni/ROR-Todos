<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>Due</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
        <% if todo.status%>
            <tr class="green">
            <td><%= todo.content %></td>
            <td><%= todo.status %></td>
            <td><%= todo.due %></td>
            <td><%= todo.priority %></td>
        
            <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
            <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure you want to delete todo?' } %></td>
            </tr>
        <%else%>
        <tr class="red">
        <td><%= todo.content %></td>
        <td><%= todo.status %></td>
        <td><%= todo.due %></td>
        <td><%= todo.priority %></td>
    
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure you want to delete todo?' } %></td>
        </tr>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', todo: @todo %>


